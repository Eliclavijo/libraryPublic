pipeline {
    agent any
  stages {
      stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }
stage('Install SonarScanner') {
            steps {
                script {
                    // Descargar e instalar SonarScanner
                    bat 'curl -o sonar-scanner-cli-4.6.2.2472-windows.zip https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.6.2.2472-windows.zip'
                    bat 'Expand-Archive -Path sonar-scanner-cli-4.6.2.2472-windows.zip -DestinationPath C:\\sonar-scanner'
                    bat 'set PATH=C:\\sonar-scanner\\bin;%PATH%'
                }
            }
        }

        stage('SonarQube Scan') {
            steps {
                script {
                    // Ejecutar el an√°lisis de SonarQube
                    bat 'sonar-scanner -Dsonar.projectKey=my-project -Dsonar.projectVersion=1.0.0 -Dsonar.sources=src/'
                }
            }
        }
  }
}
