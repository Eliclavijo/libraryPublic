pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                script {
                    // Dar permisos a la carpeta
                    sh 'chmod -R 755 /var/lib/apt/lists/partial'
                    
                    // Actualizar los paquetes
                    sh 'apt-get update'

                    // Instalar PHP y Composer
                    sh 'apt-get install -y php-cli composer'
                    
                    // Cambiar al directorio del código fuente (ajusta la ruta según tu configuración)
                    dir('C:/ruta/al/proyecto') {
                        // Ejecutar 'composer install'
                        sh 'composer install'

                        // Ejecutar 'phpunit'
                        sh 'phpunit'
                    }
                }
            }
        }
    }
}
