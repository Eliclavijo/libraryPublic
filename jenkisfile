pipeline {
    agent any
    
    stages {
        stage('Clonar Repositorio') {
            steps {
                checkout scm
            }
        }
        stage('Instalar PHPUnit') {
            steps {
                script {
                    sh 'composer global require "phpunit/phpunit:^9"'
                }
            }
        }
        stage('Ejecutar Pruebas') {
            steps {
                script {
                    // Ejecuta tus pruebas PHP aqu√≠
                    sh 'phpunit'
                }
            }
        }
    }
}
