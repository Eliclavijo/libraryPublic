pipeline {
    agent any
  stages {
      stage('Checkout') {
            steps {
                script {
                    checkout scm
                }
            }
        }
   stage('SonarQube Scan') {
    steps {
        script {
            // Descargar e instalar SonarScanner
            sh 'wget https://binaries.sonarsource.com/Distribution/sonar-scanner-cli/sonar-scanner-cli-4.6.2.2472-linux.zip'
            sh 'unzip sonar-scanner-cli-4.6.2.2472-linux.zip'
            sh 'export PATH=$PATH:/ruta/del/sonar-scanner/bin'

            // Ejecutar el an√°lisis de SonarQube
            sh 'sonar-scanner -Dsonar.projectKey=my-project -Dsonar.projectVersion=1.0.0 -Dsonar.sources=src/'
        }
    }
}
  }
}
